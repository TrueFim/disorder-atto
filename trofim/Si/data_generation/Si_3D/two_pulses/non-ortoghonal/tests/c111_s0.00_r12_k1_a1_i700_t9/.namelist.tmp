
&calculation
theory = 'tddft_pulse'
/

&control
sysname = 'pulse_1e6'
/

&units
unit_system = 'A_eV_fs'
/

&parallel
yn_ffte = 'y'


nproc_k=1
nproc_ob=1
nproc_rgrid=1,1,1
/

&system
yn_periodic = 'y'

al(1:3) = 5.43d0, 5.43d0, 5.43d0

nelem  = 1
natom  = 8
nelec  = 32
nstate = 32
/

&pseudo
file_pseudo(1) = './Si_rps.dat'

izatom(1) = 14

lloc_ps(1) = 2
/

&functional
xc = 'PZ'
/

&rgrid
num_rgrid(1:3) = 12, 12, 12
/

&kgrid
num_kgrid(1:3) = 1, 1, 1
/

&tgrid
dt = 0.002d0
nt = 9000
/

&emfield
ae_shape1 = 'Acos4'
I_wcm2_1 = 1.0d6
tw1 = 10d0
omega1 = 1d0
epdir_re1(1:3) = 0.0d0, 0.0d0, 1.0d0


ae_shape2 = 'Acos4'
I_wcm2_2 = 4.0d6
tw2 = 1d0
omega2 = 10d0
epdir_re2(1:3) = 0.0d0, 0.0d0, 1.0d0


t1_t2 = -1d0


/

&analysis
de      = 0.01d0
nenergy = 3000
/

