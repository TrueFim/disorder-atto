
&calculation
theory = 'tddft_pulse'
/

&control
sysname = 'Si_c111_s0_r12_k2_a1_i1000_t9'
/

&units
unit_system = 'A_eV_fs'
/

&system
yn_periodic = 'y'

al(1:3) = 5.43d0, 5.43d0, 5.43d0

nelem  = 1
natom  = 8
nelec  = 32
nstate = 32
/

&pseudo
file_pseudo(1) = './Si_rps.dat'

izatom(1) = 14

lloc_ps(1) = 2
/

&functional
xc = 'PZ'
/

&rgrid
num_rgrid(1:3) = 12, 12, 12
/

&kgrid
num_kgrid(1:3) = 2, 2, 2
/

&tgrid
dt = 0.002d0
nt = 9000
/

&emfield
ae_shape1 = 'Acos2'

I_wcm2_1 = 1.0d12

tw1 = 10.672d0

omega1 = 1.55d0

epdir_re1(1:3) = 0.0d0, 0.0d0, 1.0d0
/

&analysis
de      = 0.01d0
nenergy = 3000
/

