
&calculation
theory = 'tddft_response'
/

&control
sysname = 'lr'
/

&units
unit_system = 'A_eV_fs'
/

&parallel
yn_ffte = 'y'

yn_scalapack = 'y'

nproc_k=12
nproc_ob=2
nproc_rgrid=1,1,1
/

&system
yn_periodic = 'y'

al(1:3) = 5.43d0, 5.43d0, 5.43d0

nelem  = 1
natom  = 8
nelec  = 32
nstate = 48
/

&pseudo
file_pseudo(1) = './Si_rps.dat'

izatom(1) = 14

lloc_ps(1) = 2
/

&functional
xc = 'PZ'
/

&rgrid
num_rgrid(1:3) = 18, 18, 18
/

&kgrid
num_kgrid(1:3) = 16, 16, 16
/

&tgrid
dt = 0.002d0
nt = 9000
/

&emfield
ae_shape1 = 'impulse'

epdir_re1(1:3) = 0.00d0, 0.00d0, 1.00d0
/

&analysis
de      = 0.01d0
nenergy = 1200
/

