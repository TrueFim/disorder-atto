
&calculation
theory = 'tddft_pulse'

yn_md = 'y'

/

&control
sysname = 'both_pulses'
/

&units
unit_system = 'A_eV_fs'
/

&parallel
yn_ffte = 'y'


nproc_ob=1
nproc_rgrid=1,1,1
nproc_k=125
/

&system
yn_periodic = 'y'

al(1:3) = 16.29d0, 16.29d0, 16.29d0

nelem  = 1
natom  = 216
nelec  = 864
nstate = 864
/

&pseudo
file_pseudo(1) = './Si_rps.dat'

izatom(1) = 14

lloc_ps(1) = 2
/

&functional
xc = 'PZ'
/

&rgrid
num_rgrid(1:3) = 54, 54, 54
/

&kgrid
num_kgrid(1:3) = 5, 5, 5
/

&tgrid
dt = 0.002d0
nt = 15000
/

&emfield
ae_shape1 = 'Acos2'
I_wcm2_1 = 0d9
tw1 = 12d0
omega1 = 0.17d0
epdir_re1(1:3) = 1.0d0, 0.0d0, 0.0d0
phi_cep1 = 0.25


ae_shape2 = 'Acos4'
I_wcm2_2 = 0d12
tw2 = 5.8d0
omega2 = 1.5d0
epdir_re2(1:3) = 0.0d0, 0.0d0, 1.0d0

t1_t2 = 0d0


/

&analysis
de      = 0.01d0
nenergy = 3000
/

